<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bar">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/activity_margin50"
        android:layout_height="@dimen/activity_margin50"
        android:scaleType="center"
        android:src="@drawable/fanhui" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_toLeftOf="@+id/iv_share"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/activity_margin10"
        android:layout_marginRight="@dimen/activity_margin10"
        android:singleLine="true"
        android:textColor="@color/text_title_white"
        android:textSize="@dimen/activity_text_size20"
        tools:text="标题" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/activity_margin50"
        android:layout_height="@dimen/activity_margin50"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        tools:src="@drawable/sousuo_huangse" />
</RelativeLayout>